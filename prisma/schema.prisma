generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ──────────────────────────────────────────────
// Auth models (required by @auth/prisma-adapter)
// ──────────────────────────────────────────────

enum UserRole {
  HOBBYIST
  EDITOR
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(HOBBYIST)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts            Account[]
  sessions            Session[]
  tanks               Tank[]
  maintenanceTasks    MaintenanceTask[]
  waterLogs           WaterLog[]
  notifications       Notification[]
  pushSubscriptions   PushSubscription[]
  savedConfigurations SavedConfiguration[]
  guides              Guide[]
  fishSpecies         FishSpecies[]
  contentProducts     ContentProduct[]
  glossaryTerms       GlossaryTerm[]
  comparisons         Comparison[]
  curationLists       CurationList[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ──────────────────────────────────────────────
// Tank models
// ──────────────────────────────────────────────

enum TankType {
  LOW_TECH
  HIGH_TECH
  NANO
}

model Tank {
  id           String   @id @default(cuid())
  userId       String
  name         String
  gallons      Float
  lengthInch   Float?
  widthInch    Float?
  heightInch   Float?
  tankType     TankType @default(LOW_TECH)
  hasCO2       Boolean  @default(false)
  filterType   String?
  lightType    String?
  heaterWatts  Int?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user               User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  livestock          TankLivestock[]
  plants             TankPlant[]
  equipment          TankEquipment[]
  maintenanceTasks   MaintenanceTask[]
  waterLogs          WaterLog[]
  dosingSchedules    DosingSchedule[]
  savedConfigurations SavedConfiguration[]
}

model TankLivestock {
  id             String  @id @default(cuid())
  tankId         String
  speciesName    String
  scientificName String?
  quantity       Int     @default(1)
  maxSizeInch    Float?
  temperament    String?
  zone           String?

  tank Tank @relation(fields: [tankId], references: [id], onDelete: Cascade)
}

model TankPlant {
  id             String  @id @default(cuid())
  tankId         String
  plantName      String
  scientificName String?
  quantity       Int     @default(1)
  placement      String?
  co2Required    Boolean @default(false)
  lightNeed      String?

  tank Tank @relation(fields: [tankId], references: [id], onDelete: Cascade)
}

model TankEquipment {
  id            String  @id @default(cuid())
  tankId        String
  equipmentType String
  brand         String?
  model         String?
  notes         String?

  tank Tank @relation(fields: [tankId], references: [id], onDelete: Cascade)
}

// ──────────────────────────────────────────────
// Maintenance models
// ──────────────────────────────────────────────

enum MaintenanceCategory {
  WATER_CHANGE
  FILTER_CLEAN
  GLASS_CLEAN
  GRAVEL_VAC
  WATER_TEST
  FERT_DOSE
  CO2_REFILL
  TRIMMING
  FEEDING
  EQUIPMENT_CHECK
  CUSTOM
}

model MaintenanceTask {
  id              String              @id @default(cuid())
  userId          String
  tankId          String
  title           String
  description     String?
  category        MaintenanceCategory
  frequencyDays   Int
  lastCompleted   DateTime?
  nextDue         DateTime
  isAutoGenerated Boolean             @default(false)
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt

  user        User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  tank        Tank                    @relation(fields: [tankId], references: [id], onDelete: Cascade)
  completions MaintenanceCompletion[]
}

model MaintenanceCompletion {
  id          String   @id @default(cuid())
  taskId      String
  completedAt DateTime @default(now())
  notes       String?

  task MaintenanceTask @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model WaterLog {
  id          String   @id @default(cuid())
  userId      String
  tankId      String
  loggedAt    DateTime @default(now())
  temperature Float?
  ph          Float?
  ammonia     Float?
  nitrite     Float?
  nitrate     Float?
  kh          Float?
  gh          Float?
  tds         Float?
  co2Ppm      Float?
  notes       String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tank Tank @relation(fields: [tankId], references: [id], onDelete: Cascade)
}

// ──────────────────────────────────────────────
// Dosing models
// ──────────────────────────────────────────────

enum DosingMethod {
  EI
  PPS_PRO
  ADA
  ALL_IN_ONE
  CUSTOM
}

model DosingSchedule {
  id              String       @id @default(cuid())
  tankId          String
  method          DosingMethod
  fertBrand       String?
  fertProductName String?
  doseAmountMl    Float?
  frequencyDays   Int?
  dayPattern      String?
  notes           String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  tank Tank @relation(fields: [tankId], references: [id], onDelete: Cascade)
}

// ──────────────────────────────────────────────
// Notification models
// ──────────────────────────────────────────────

enum NotificationType {
  MAINTENANCE_DUE
  OVERDUE
  WATER_TEST
  DOSING
  SYSTEM
}

model Notification {
  id     String           @id @default(cuid())
  userId String
  type   NotificationType
  title  String
  body   String
  link   String?
  read   Boolean          @default(false)
  sentAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PushSubscription {
  id       String @id @default(cuid())
  userId   String
  endpoint String @unique
  p256dh   String
  auth     String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ──────────────────────────────────────────────
// Config / Admin models
// ──────────────────────────────────────────────

model SavedConfiguration {
  id        String   @id @default(cuid())
  userId    String
  tankId    String?
  name      String
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  tank Tank? @relation(fields: [tankId], references: [id], onDelete: SetNull)
}

model AdminProduct {
  id               String  @id @default(cuid())
  shopifyProductId String? @unique
  title            String
  category         String
  price            Float
  imageUrl         String?
  isActive         Boolean @default(true)
  metadata         Json?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

// ──────────────────────────────────────────────
// Content models
// ──────────────────────────────────────────────

enum ContentStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Guide {
  id                   String        @id @default(cuid())
  slug                 String        @unique
  title                String
  description          String
  category             String
  author               String
  bodyMarkdown         String        @db.Text
  readingTime          String
  image                String?
  status               ContentStatus @default(DRAFT)
  publishedAt          DateTime?
  relatedGuides        String[]
  relatedFish          String[]
  relatedProducts      String[]
  relatedGlossaryTerms String[]
  faqs                 Json?
  createdById          String?
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt

  createdBy User? @relation(fields: [createdById], references: [id], onDelete: SetNull)
}

model FishSpecies {
  id               String        @id @default(cuid())
  slug             String        @unique
  commonName       String
  scientificName   String
  family           String
  origin           String
  description      String        @db.Text
  image            String?
  difficulty       String
  temperament      String
  diet             String
  lifespan         String
  size             String
  tankSize         String
  temperature      String
  ph               String
  hardness         String
  waterType        String
  careNotes        String        @db.Text
  compatibleWith   String[]
  incompatibleWith String[]
  relatedGuides    String[]
  relatedProducts  String[]
  faqs             Json?
  status           ContentStatus @default(DRAFT)
  createdById      String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  createdBy User? @relation(fields: [createdById], references: [id], onDelete: SetNull)
}

model ContentProduct {
  id              String        @id @default(cuid())
  slug            String        @unique
  name            String
  category        String
  brand           String
  description     String        @db.Text
  price           Float
  originalPrice   Float?
  rating          Float
  reviewCount     Int
  image           String?
  features        String[]
  pros            String[]
  cons            String[]
  specifications  Json?
  inStock         Boolean       @default(true)
  bestFor         String[]
  relatedProducts String[]
  relatedGuides   String[]
  relatedFish     String[]
  status          ContentStatus @default(DRAFT)
  createdById     String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  createdBy User? @relation(fields: [createdById], references: [id], onDelete: SetNull)
}

model GlossaryTerm {
  id              String        @id @default(cuid())
  slug            String        @unique
  term            String
  definition      String        @db.Text
  longDescription String        @db.Text
  category        String
  relatedTerms    String[]
  relatedGuides   String[]
  relatedFish     String[]
  faqs            Json?
  status          ContentStatus @default(DRAFT)
  createdById     String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  createdBy User? @relation(fields: [createdById], references: [id], onDelete: SetNull)
}

model Comparison {
  id                 String        @id @default(cuid())
  slug               String        @unique
  title              String
  description        String        @db.Text
  image              String?
  optionA            Json
  optionB            Json
  criteria           Json
  verdict            String        @db.Text
  relatedComparisons String[]
  relatedGuides      String[]
  faqs               Json?
  status             ContentStatus @default(DRAFT)
  createdById        String?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  createdBy User? @relation(fields: [createdById], references: [id], onDelete: SetNull)
}

model CurationList {
  id             String        @id @default(cuid())
  slug           String        @unique
  title          String
  description    String        @db.Text
  intro          String        @db.Text
  image          String?
  items          Json
  relatedLists   String[]
  relatedGuides  String[]
  targetPersonas String[]
  faqs           Json?
  status         ContentStatus @default(DRAFT)
  createdById    String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  createdBy User? @relation(fields: [createdById], references: [id], onDelete: SetNull)
}

// ──────────────────────────────────────────────
// Configurator management models
// ──────────────────────────────────────────────

model ShopifyProductOverride {
  id               String  @id @default(cuid())
  shopifyProductId String  @unique
  categoryOverride String?
  isHidden         Boolean @default(false)
  sortOrder        Int?
  notes            String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model ConfiguratorTemplate {
  id                String  @id @default(cuid())
  templateId        String  @unique
  name              String
  description       String  @db.Text
  style             String
  tankId            String
  difficulty        String
  shopifyProductIds String[]
  isActive          Boolean @default(true)
  sortOrder         Int     @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model CategoryConfig {
  id           String  @id @default(cuid())
  name         String  @unique
  displayOrder Int     @default(0)
  isActive     Boolean @default(true)
  icon         String?
  description  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
